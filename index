<!DOCTYPE html>
<html>
<head>
    <title>AdSense Code Generator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            max-width: 500px;
        }
        label {
            display: block;
            margin-top: 10px;
        }
        input, textarea, button {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
        }
        textarea {
            height: 150px;
            resize: none;
        }
    </style>
</head>
<body>

    <h2>Google AdSense Code Generator</h2>

    <label for="url">Website URL (Approved with AdSense):</label>
    <input type="text" id="url" placeholder="https://example.com">

    <label for="clientId">AdSense Client ID:</label>
    <input type="text" id="clientId" placeholder="ca-pub-xxxxxxxxxxxxxxxx">

    <label for="slotId">Ad Slot ID:</label>
    <input type="text" id="slotId" placeholder="1234567890">

    <button onclick="generateCode()">Generate Ad Code</button>

    <label for="output">Generated Code:</label>
    <textarea id="output" readonly></textarea>

    <script>
        function generateCode() {
            let url = document.getElementById('url').value.trim();
            let clientId = document.getElementById('clientId').value.trim();
            let slotId = document.getElementById('slotId').value.trim();

            if (!url || !clientId || !slotId) {
                alert("Please fill in all fields.");
                return;
            }

            let code = `
<!-- Google AdSense Ad Code -->
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${clientId}" crossorigin="anonymous"></script>
<ins class="adsbygoogle"
     style="display:block"
     data-ad-client="${clientId}"
     data-ad-slot="${slotId}"
     data-ad-format="auto"
     data-full-width-responsive="true"></ins>
<script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script>
<!-- Approved site: ${url} -->
`;

            document.getElementById('output').value = code;
        }
    </script>

</body>
</html>
